<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/oi">

    <RelativeLayout

        android:layout_width="380dp"
        android:layout_height="680dp"
        android:padding="20dp"

        android:background="@drawable/shape"
        android:layout_centerInParent="true">
        <TextView
            android:id="@+id/output"
            android:textAlignment="textEnd"
            android:textSize="56dp"
            android:background="@drawable/line"
            android:fontFamily="@font/comic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="aA"/>

        <TextView
            android:id="@+id/btn1"
            android:textAlignment="center"
            android:layout_marginLeft="30"
            android:fontFamily="@font/comic"
            android:layout_marginTop="30dp"
            android:background="@drawable/line"
            android:layout_width="70dp"
            android:textSize="56dp"
            android:layout_height="70dp"
            android:layout_below="@+id/output"
            android:text="+"/>

        <TextView
            android:id="@+id/btn2"
            android:textAlignment="center"
            android:layout_toRightOf="@id/btn1"
            android:background="@drawable/line"
            android:textSize="56dp"
            android:fontFamily="@font/comic"
            android:layout_marginTop="30dp"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_below="@+id/output"
            android:text="-"/>

        <TextView
            android:id="@+id/btn3"
            android:layout_toRightOf="@id/btn2"
            android:textAlignment="center"
            android:textSize="56dp"
            android:fontFamily="@font/comic"
            android:background="@drawable/line"
            android:layout_marginTop="30dp"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_below="@+id/output"
            android:text="/"/>

        <TextView
            android:id="@+id/btn4"
            android:layout_toRightOf="@id/btn3"
            android:textAlignment="center"
            android:textSize="56dp"
            android:fontFamily="@font/comic"
            android:background="@drawable/line"
            android:layout_marginTop="30dp"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_below="@+id/output"
            android:text="X"/>
        <TextView
            android:id="@+id/btn5"
            android:textAlignment="center"
            android:textSize="56dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/line"
            android:fontFamily="@font/comic"
           android:layout_marginLeft="70dp"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_below="@+id/btn1"
            android:text="1"/>
        <TextView
       android:id="@+id/btn6"
        android:textAlignment="center"
        android:layout_toRightOf="@id/btn5"
        android:textSize="56dp"
            android:background="@drawable/line"
        android:fontFamily="@font/comic"
        android:layout_marginTop="10dp"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_below="@+id/btn2"
        android:text="2"/>
        <TextView
            android:id="@+id/btn7"
            android:textAlignment="center"
            android:layout_toRightOf="@id/btn6"
            android:textSize="56dp"
            android:fontFamily="@font/comic"
            android:background="@drawable/line"
            android:layout_marginTop="10dp"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_below="@+id/btn3"
            android:text="3"/>
        <TextView
            android:id="@+id/btn8"
            android:textAlignment="center"
            android:textSize="56dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/comic"
            android:background="@drawable/line"
            android:layout_marginLeft="70dp"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_below="@+id/btn5"
            android:text="4"/>
        <TextView
            android:id="@+id/btn9"
            android:textAlignment="center"
            android:layout_toRightOf="@id/btn8"
            android:textSize="56dp"
            android:background="@drawable/line"
            android:fontFamily="@font/comic"
            android:layout_marginTop="10dp"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_below="@+id/btn7"
            android:text="5"/>
        <TextView
            android:id="@+id/btn10"
            android:textAlignment="center"
            android:layout_toRightOf="@id/btn9"
            android:textSize="56dp"
            android:fontFamily="@font/comic"
            android:layout_marginTop="10dp"
            android:background="@drawable/line"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_below="@+id/btn6"
            android:text="6"/>
        <TextView
            android:id="@+id/btn11"
            android:textAlignment="center"
            android:textSize="56dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/comic"
            android:layout_marginLeft="70dp"
            android:background="@drawable/line"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_below="@+id/btn8"
            android:text="7"/>
        <TextView
            android:id="@+id/btn12"
            android:background="@drawable/line"
            android:textAlignment="center"
            android:layout_toRightOf="@id/btn5"
            android:textSize="56dp"
            android:fontFamily="@font/comic"
            android:layout_marginTop="10dp"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_below="@+id/btn10"
            android:text="8"/>
        <TextView
            android:id="@+id/btn13"
            android:background="@drawable/line"
            android:textAlignment="center"
            android:layout_toRightOf="@id/btn6"
            android:textSize="56dp"
            android:fontFamily="@font/comic"
            android:layout_marginTop="10dp"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_below="@+id/btn9"
            android:text="9"/>
        <TextView
            android:id="@+id/btn14"
            android:textAlignment="center"
            android:textSize="56dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/line"
            android:fontFamily="@font/comic"
            android:layout_marginLeft="70dp"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_below="@+id/btn12"
            android:text="C"/>
        <TextView
            android:id="@+id/btn15"
            android:textAlignment="center"
            android:background="@drawable/line"
            android:layout_toRightOf="@id/btn5"
            android:textSize="56dp"
            android:fontFamily="@font/comic"
            android:layout_marginTop="10dp"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_below="@+id/btn11"
            android:text="0"/>
        <TextView
            android:id="@+id/btn16"
            android:textAlignment="center"
            android:layout_toRightOf="@id/btn6"
            android:background="@drawable/line"
            android:textSize="56dp"
            android:fontFamily="@font/comic"
            android:layout_marginTop="10dp"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_below="@+id/btn12"
            android:text="="/>
        <TextView
            android:id="@+id/Btn17"
            android:textAlignment="center"
            android:textSize="30dp"
            android:fontFamily="@font/comic"
            android:background="@drawable/line"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn16"
            android:layout_marginTop="20dp"
            android:text="Перейти к переводу"/>

    </RelativeLayout>
</RelativeLayout>
